<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <RelativeLayout
        android:id="@+id/reports_head"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reports_head_zhichu"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_fullblue_left_shape"
                android:gravity="center"
                android:text="我的消费"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/reports_head_shouru"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_lineblue_center_shape"
                android:gravity="center"
                android:text="我的存款"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/reports_head_qushi"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/btn_lineblue_right_shape"
                android:gravity="center"
                android:text="我的趋势"
                android:textColor="@color/blue"/>
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/reposts_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reports_head"
        android:layout_marginTop="5dp">
    </android.support.v4.view.ViewPager>
</RelativeLayout>